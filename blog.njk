---
layout: layouts/base-layout.njk
title: Karel De Smet - Blog
slug: "/blog/"
---
<div id="blog-overview">
    {% for article in collections.article | reverse %}
    <article>
        <div class="article-title">
            <a href="{{ article.url | url }}">{{ article.data.title }}</a>
        </div>
        <time class="article-date">{{ article.date | date }}</time>
        <div class="article-preview">
            <p>{{ article.data.preview }}</p>
        </div>
    </article>
    {% endfor %}
</div>


