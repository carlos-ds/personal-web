---
layout: layouts/base-layout.njk
title: Karel De Smet - Blog
pagination:
  data: collections.article
  size: 10
  reverse: true
  alias: articles
permalink: "/blog/page-{{ pagination.pageNumber + 1 }}/index.html"
slug: "/blog/"
---
<div id="listing">
  {% for article in pagination.items %}
    <article>
      <div class="article-date"><span>{{ article.date | date }}</span></div>
      <div class="article-title">
        <a href="{{ article.url | url }}">{{ article.data.title }}</a>
      </div>
      <div class="article-preview">
        <p>{{ article.data.preview }}</p>
      </div>
    </article>
  {% endfor %}
  <nav id="pagination">
    <ul>
      <li>{% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">Previous page</a>{% else %}Previous page{% endif %}</li>
      <li>{% if pagination.href.next %}<a href="{{ pagination.href.next }}">Next page</a>{% else %}Next page{% endif %}</li>
    <ul>
  </nav>
</div>


